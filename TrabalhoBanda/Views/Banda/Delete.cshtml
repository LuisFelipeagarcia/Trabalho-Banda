@model TrabalhoBanda.Models.Banda

@{
    Layout = "_LayoutIES";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="card-body">
    <div class="card-header text-primary bg-light text-center h1">
        Excluir Banda
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="BandaID" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="BandaID" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Nome" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Email" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CatMusical" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="CatMusical" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="numIntegrantes" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="numIntegrantes" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="numAlbuns" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="numAlbuns" class="form-control" disabled="disabled">
            </div>
        </div>
    </div>
    <div class="form-group text-center h3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="BandaID" />
            <input type="submit" value="Remover" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-info">Retornar</a>
        </form>
    </div>

</div>
